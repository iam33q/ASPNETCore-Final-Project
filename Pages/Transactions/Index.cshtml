@page
@model build.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].outbound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Property)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.outbound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.propertyID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.transactionID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.transactionID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.transactionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
