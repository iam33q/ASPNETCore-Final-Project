@page
@model build.Pages.Transactions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.transactionID" />
            <div class="form-group">
                <label asp-for="Transaction.PropertyID" class="control-label"></label>
                <select asp-for="Transaction.PropertyID" class="form-control" asp-items="ViewBag.PropertyID"></select>
                <span asp-validation-for="Transaction.PropertyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.amount" class="control-label"></label>
                <input asp-for="Transaction.amount" class="form-control" />
                <span asp-validation-for="Transaction.amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.sender" class="control-label"></label>
                <input asp-for="Transaction.sender" class="form-control" />
                <span asp-validation-for="Transaction.sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.recipient" class="control-label"></label>
                <input asp-for="Transaction.recipient" class="form-control" />
                <span asp-validation-for="Transaction.recipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.description" class="control-label"></label>
                <input asp-for="Transaction.description" class="form-control" />
                <span asp-validation-for="Transaction.description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Transaction.outbound" /> @Html.DisplayNameFor(model => model.Transaction.outbound)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.date" class="control-label"></label>
                <input asp-for="Transaction.date" class="form-control" />
                <span asp-validation-for="Transaction.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
