@page
@model build.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.itemID" />
            <div class="form-group">
                <label asp-for="Item.PropertyID" class="control-label"></label>
                <select asp-for="Item.PropertyID" class="form-control" asp-items="ViewBag.PropertyID"></select>
                <span asp-validation-for="Item.PropertyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.name" class="control-label"></label>
                <input asp-for="Item.name" class="form-control" />
                <span asp-validation-for="Item.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.value" class="control-label"></label>
                <input asp-for="Item.value" class="form-control" />
                <span asp-validation-for="Item.value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.description" class="control-label"></label>
                <input asp-for="Item.description" class="form-control" />
                <span asp-validation-for="Item.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
